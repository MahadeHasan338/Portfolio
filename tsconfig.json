{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/Header.jsx", "app/HomePage.jsx", "app/page.jsx", "components/Hero.jsx", "app/layout.jsx", "components/About.jsx", "components/Socials.jsx", "components/skills/SkillCard.jsx", "components/skills/Skills.jsx", "components/experiences/Experiences.jsx", "components/experiences/ExperienceCard.jsx"],
  "exclude": ["node_modules"]
}
